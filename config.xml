<?xml version='1.0' encoding='utf-8'?>
<widget 
        id="com.phonegap.dongrigorio.mypraktic" 
        version="0.2.6" 
        xmlns="http://www.w3.org/ns/widgets" 
        versionCode = "0.2.6.1"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <name>Моя практика</name>
    <description>
        Программа для аккуратных практикунов.
    </description>
    <author email="2dongrigorio@gmail.com" href="http://geo-format.ru">
        Don Grigorio
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="orientation" value="portrait" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <icon src="www/img/ldpi.png" platform="android" density="ldpi" qualifier="ldpi" />
        <icon src="www/img/mdpi.png" platform="android" density="mdpi" qualifier="mdpi" />
        <icon src="www/img/hdpi.png" platform="android" density="hdpi" qualifier="hdpi" />
        <icon src="www/img/xhdpi.png" platform="android" density="xhdpi" qualifier="xhdpi" />
        <icon src="www/img/xxhdpi.png" platform="android" density="xxhdpi" qualifier="xxhdpi" />
        <icon src="www/img/fr-xxhdpi.png" platform="android" density="fr-xxhdpi" qualifier="fr-xxhdpi" />
    </platform>

    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <plugin name="cordova-plugin-console" spec="1.0.7" />
    <plugin name="cordova-plugin-statusbar" spec="1.0.1" />
</widget>
